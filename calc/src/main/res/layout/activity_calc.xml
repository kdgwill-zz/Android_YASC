<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.math.calc.CalcActivity">

    <TextView
        android:text="0\n+\t\t\t"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/textViewSign"
        android:textSize="22dp"
        android:textIsSelectable="false"
        android:singleLine="false"
        android:gravity="right"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView" />

    <TextView
        android:text="0"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="45dp"
        android:textIsSelectable="false"
        android:singleLine="false"
        android:gravity="right"
        android:layout_toRightOf="@+id/button_7" />


    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="0"
        android:id="@+id/button_0"
        android:onClick="onButtonClick"
        android:layout_marginBottom="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="1"
        android:id="@+id/button_1"
        android:onClick="onButtonClick"
        android:layout_above="@+id/button_0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="2"
        android:id="@+id/button_2"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/button_1"
        android:layout_toRightOf="@+id/button_1" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="3"
        android:id="@+id/button_3"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/button_2"
        android:layout_toRightOf="@+id/button_2" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="4"
        android:id="@+id/button_4"
        android:onClick="onButtonClick"
        android:layout_above="@+id/button_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="5"
        android:id="@+id/button_5"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/button_4"
        android:layout_toRightOf="@+id/button_4" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="6"
        android:id="@+id/button_6"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/button_5"
        android:layout_toRightOf="@+id/button_5" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="7"
        android:id="@+id/button_7"
        android:onClick="onButtonClick"
        android:layout_above="@+id/button_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="8"
        android:id="@+id/button_8"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/button_7"
        android:layout_toRightOf="@+id/button_7" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="9"
        android:id="@+id/button_9"
        android:onClick="onButtonClick"
        android:layout_alignTop="@+id/button_8"
        android:layout_toRightOf="@+id/button_8" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="+"
        android:id="@+id/button_add"
        android:onClick="onChangeOperator"
        android:layout_alignTop="@+id/button_6"
        android:layout_toRightOf="@+id/button_6" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="-"
        android:id="@+id/button_subtract"
        android:onClick="onChangeOperator"
        android:layout_alignTop="@+id/button_3"
        android:layout_toRightOf="@+id/button_3" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="x"
        android:id="@+id/button_multiply"
        android:onClick="onChangeOperator"
        android:layout_alignTop="@+id/button_0"
        android:layout_toRightOf="@+id/button_0" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="/"
        android:id="@+id/button_divide"
        android:onClick="onChangeOperator"
        android:layout_alignTop="@+id/button_multiply"
        android:layout_toRightOf="@+id/button_multiply" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="^"
        android:id="@+id/button_exp"
        android:onClick="onChangeOperator"
        android:layout_alignTop="@+id/button_divide"
        android:layout_toRightOf="@+id/button_divide" />

    <Button
        android:layout_width="90sp"
        android:layout_height="80sp"
        android:text="clear"
        android:id="@+id/button_clear"
        android:onClick="onChangeOperator"
        android:layout_alignTop="@+id/button_9"
        android:layout_toRightOf="@+id/button_9" />

    <Button
        android:layout_width="90sp"
        android:layout_height="70sp"
        android:text="del"
        android:id="@+id/button_delete"
        android:onClick="onChangeOperator"
        android:layout_below="@+id/button_divide"
        android:layout_alignRight="@+id/button_exp"
        android:layout_alignEnd="@+id/button_exp" />

    <Button
        android:layout_width="90sp"
        android:layout_height="70sp"
        android:text="."
        android:id="@+id/button_dot"
        android:onClick="onButtonClick"
        android:layout_alignBottom="@+id/button_equals"
        android:layout_toLeftOf="@+id/button_multiply" />

    <Button
        android:layout_width="90sp"
        android:layout_height="70sp"
        android:text="="
        android:id="@+id/button_equals"
        android:onClick="onChangeOperator"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_multiply"
        android:layout_alignStart="@+id/button_multiply"
        android:layout_toLeftOf="@+id/button_delete" />


</RelativeLayout>

